<div class='header'>
  <a href='#test'>
    {{> logo }}
  </a>

  <nav class='header_nav'>
    <div class="header_nav_right">
      {{> nav list=header }}
    </div>
  </nav>
</div>

<main class="main">
  {{#with info}}
    <div class="info">
      <h1 class="info_title">{{title}}</h1>
      <div class="info_description">{{description}}</div>  
    </div>
  {{/with}}

  {{#with form}}
    <form class="form">
     
      <div class="form_input_list">
        {{#each inputs}}
          <input type={{type}} placeholder={{placeholder}} class="form_input" name="{{name}}" id="form-input-{{id}}">
        {{/each}}
      </div>

      <div class="form_checkbox">
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>


{{#with updates}}
  <div class="updates"> 
    <strong class="updates_title">{{title}}</strong>

      <div class="updates_block">
        {{#each list}}
          <div class="updates_icon">32x32</div>
          
          <div class="updates_nickname">{{nickname}}</div>
          <div class="updates_description">{{description}}</div>
          
        {{/each}}
      </div>

    {{#with show_all}}
      <a href="{{url}}">{{text}}</a>
    {{/with}}
  </div>
{{/with}}

{{#with experience}}
  <div class="experience_block">
    <strong class="experience_title">{{title}}</strong>
    <span class="experience_badge">{{badge}}</span>

    <div class="experience_section">
      {{#each list}}
        <div class="experience_list">
          <div class="experience_list_name">{{name}}</div>
          <p class="experience_list_details">{{details}}</p>
        </div>
      {{/each}}
    </div>
  </div>
{{/with}}

<div class="footer" id="test">
  <div>
    {{> logo }}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true }}
    </div>
  {{/each}}
</div>

